# Environment Configuration for Moses Wildlife Backend
# Copy this to .env and fill in your actual values

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3001

# Database Configuration (adjust based on your database setup)
# MONGODB_URI=mongodb://localhost:27017/moses-wildlife
# DATABASE_URL=your_database_connection_string

# CORS Configuration
# For development
FRONTEND_URL=http://localhost:3000
# For production (update with your Static Web App URL)
# FRONTEND_URL=https://your-static-web-app-url.azurestaticapps.net

# Security Keys (generate secure keys for production)
# JWT_SECRET=your_jwt_secret_key
# SESSION_SECRET=your_session_secret_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/gif
